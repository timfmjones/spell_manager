    <tr>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.order(:name).each do |books| %>
      <tr>
        <td><%= books.name %></td>
        <td><%= radio_button_tag(@bk, "#{books}") %></td>
        <p><%= link_to 'Edit Book', edit_book_path(@book) %></p>
      </tr>
    <% end %>
    
    
  </tbody>
</table>

 