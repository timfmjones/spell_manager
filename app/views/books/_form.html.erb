<%= form_with(model: book, local: true) do |form| %>
 



  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  

  <div class="field">
    <%= form.label "Add spell to book" %>
    <%= form.select(:spell, Spell.to_nested_array_for_select ) %>      
  
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>